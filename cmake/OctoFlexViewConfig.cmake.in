@PACKAGE_INIT@

# OctoFlexView CMake Configuration File
# This file automatically provides all dependencies and compile flags

include(CMakeFindDependencyMacro)

# Find all required dependencies
find_dependency(Qt5 REQUIRED COMPONENTS Widgets OpenGL)
find_dependency(OpenGL REQUIRED)
find_dependency(GLEW REQUIRED)
find_dependency(glm REQUIRED)

# Include the targets file
if(NOT TARGET OctoFlexView::octo_flex_view)
    include("${CMAKE_CURRENT_LIST_DIR}/OctoFlexViewTargets.cmake")
endif()

# Set convenient variables
set(OctoFlexView_LIBRARIES OctoFlexView::octo_flex_view)
set(OctoFlexView_INCLUDE_DIRS
    "${PACKAGE_PREFIX_DIR}/include"
    "${PACKAGE_PREFIX_DIR}/include/octo_flex"
)

# Automatically set Qt MOC flags for user projects
set(CMAKE_AUTOMOC ON PARENT_SCOPE)
set(CMAKE_AUTORCC ON PARENT_SCOPE)
set(CMAKE_AUTOUIC ON PARENT_SCOPE)

# Helper function for easy integration
function(octo_flex_add_executable target_name)
    add_executable(${target_name} ${ARGN})
    target_link_libraries(${target_name} PRIVATE ${OctoFlexView_LIBRARIES})
    target_include_directories(${target_name} PRIVATE ${OctoFlexView_INCLUDE_DIRS})
endfunction()

check_required_components(OctoFlexView)
